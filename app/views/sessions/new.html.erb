<%flash.each do |type, msg| %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <%= msg %>
    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  </div>
<% end %>
<h1 class="text-center">Login</h1>
<div class="container">
<div class="rw justify-content-center">
<div class="col-10">

<%= form_with(scope: :session, url: login_path, local: true,  class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
 
  <div class="form-group row mb-2">
    <%= form.label :email, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.text_field :email, class:"form-control shadow rounded", placeholder: "Enter an email"   %>
    </div>
  </div>
  <div class="form-group row mb-2">
    <%= form.label :password, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.password_field :password, class:"form-control shadow rounded", placeholder: "Enter a password"   %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= form.submit "Log in", class: "btn btn-light col-2" %>
  </div>

<% end %>
</div>
</div>
</div>


