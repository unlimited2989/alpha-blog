<div class="container">
<div class="rw justify-content-center">
<div class="col-10">
<%= render 'shared/errors', obj:@user%>
<%= form_with(model: user, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>

  
  <div class="form-group row mb-2">
    <%= form.label :username, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.text_field :username ,class:"form-control shadow rounded", placeholder: "Enter a username" %>
    </div>   
  </div>
  <div class="form-group row mb-2">
    <%= form.label :email, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.text_field :email, class:"form-control shadow rounded", placeholder: "Enter an email"   %>
    </div>
  </div>
  <div class="form-group row mb-2">
    <%= form.label :password, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= form.text_field :password, class:"form-control shadow rounded", placeholder: "Enter a password"   %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <%= form.submit "Sign Up" ,class: "btn btn-light col-2" %>
  </div>

<% end %>
</div>
</div>
</div>